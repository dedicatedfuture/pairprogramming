<div id="profilepagewrapper">
<%= link_to 'Edit Log In Info', edit_user_registration_path(current_user), :class => "editlogin" %> 
  <div id="profile_wrapper">
     <h2>Edit Your Profile</h2>
     <%= form_for [current_user, @profile], :html => { :multipart => true } do |f| %>
     <%= f.label :fname, "First Name" %>
     <%= f.text_field :fname, :class => 'form-control' %><br>
     <%= f.label :lname, "Last Name" %>
     <%= f.text_field :lname, :class => 'form-control' %><br>
     <%= f.label :bio, "Please tell us about yourself." %>
     <%= f.text_field :bio, :class => 'form-control' %><br>
     <%= f.label :workexp, "Do you have any coding work experience?" %>
     <%= f.text_area :workexp, :class => 'form-control' %><br>
     <%= f.label :teachexp, "Do you have any coding teaching experience?" %>
     <%= f.text_area :teachexp, :class => 'form-control' %><br>
     <%= f.label :skillexp, "Do you have any other coding experience?" %>
     <%= f.text_area :skillexp, :class => 'form-control' %><br>
     <%= f.label :skype, "Skype Username" %>
     <%= f.text_field :skype, :class => 'form-control' %><br>

     <%= f.submit :Update, :class => "form_button" %>
     <% end %>

     <div id="availabilitywrapper">
         <h2>Whats your weekly availability?</h2>
         <p>Be sure to enter your availability or nobody can make an appointment with you!</p>
         <%= render partial: 'availabilities/availabilityform' %>
     </div>

    

  <div id="skills_wrapper">
     <h2 class="skillstitle">What programming skills are you familiar with?</h2>
    <%= form_for [current_user, @skill],remote: :true, :id => 'skillform' do |f| %>
        <%= f.label(:skill, "What Skills Do You Have?") %><br>
        <%= f.text_field :skill, :class => 'form-control' %>
    


        <%= f.submit "Submit Skills", id: "skill_add" %>

     <% end %>
  <ul>
     <% current_user.skills.each do |s|%>
      <li>  <%=  s.skill %>
          <%= link_to "Delete", user_skill_path(current_user, s), data: {confirm:  "Are you sure you want to delete?"}, :method => :delete %></li>
     <% end%>
     </ul>
  </div>
</div>